{
  "name": "keypal",
  "version": "0.0.00",
  "description": "A TypeScript library for secure API key management with cryptographic hashing, expiration, scopes, and pluggable storage",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./storage/memory": {
      "types": "./dist/storage/memory.d.ts",
      "require": "./dist/storage/memory.cjs",
      "import": "./dist/storage/memory.mjs"
    },
    "./storage/redis": {
      "types": "./dist/storage/redis.d.ts",
      "require": "./dist/storage/redis.cjs",
      "import": "./dist/storage/redis.mjs"
    },
    "./storage/drizzle": {
      "types": "./dist/storage/drizzle.d.ts",
      "require": "./dist/storage/drizzle.cjs",
      "import": "./dist/storage/drizzle.mjs"
    },
    "./drizzle": {
      "types": "./dist/drizzle/index.d.ts",
      "require": "./dist/drizzle/index.cjs",
      "import": "./dist/drizzle/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/izadoesdev/keypal.git"
  },
  "homepage": "https://github.com/izadoesdev/keypal#readme",
  "bugs": {
    "url": "https://github.com/izadoesdev/keypal/issues"
  },
  "license": "MIT",
  "keywords": [
    "api-keys",
    "api-key-management",
    "security",
    "authentication",
    "authorization",
    "typescript",
    "keypal",
    "hashing",
    "scopes",
    "permissions",
    "redis",
    "drizzle",
    "storage"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:redis": "vitest run src/storage/redis.test.ts",
    "test:drizzle": "vitest run src/storage/drizzle.test.ts",
    "bench": "bun run benchmark.ts",
    "example:hono": "bun run examples/hono-api.ts",
    "redis:up": "docker-compose up -d",
    "redis:down": "docker-compose down",
    "redis:logs": "docker-compose logs -f redis",
    "prepare": "husky",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@hono/node-server": "^1.19.5",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "better-sqlite3": "^12.4.1",
    "hono": "^4.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mitata": "^1.0.34",
    "pg": "^8.16.3",
    "ultracite": "5.6.4",
    "unbuild": "^3.6.1",
    "undici": "^7.16.0",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "optionalDependencies": {
    "ioredis": "^5.8.2",
    "drizzle-orm": "^0.44.6"
  },
  "dependencies": {
    "nanoid": "^5.1.6",
    "typebox": "^1.0.43"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
